{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Effect": "Allow",
            "Action": [
                "s3:GetObject",
                "s3:PutObject",
                "s3:PutObjectAcl",
                "s3:DeleteObject"
            ],
            "Resource": [ "arn:aws:s3:::{{pulumi_bucket_name}}/*" ]
        },
        {
            "Action": ["s3:ListBucket"],
            "Effect": "Allow",
            "Resource": [ "arn:aws:s3:::{{pulumi_bucket_name}}" ]
        }
    ]
}